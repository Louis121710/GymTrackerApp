// app.json
{
  "expo": {
    "name": "GymTrackerApp",
    "slug": "gym-tracker-app",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",  # Optional, add a custom icon
    "splash": {
      "image": "./assets/splash.png",  # Optional, add a splash screen
      "resizeMode": "contain",
      "backgroundColor": "#1C1C1C"
    },
    "updates": {
      "fallbackToCacheTimeout": 0
    },
    "assetBundlePatterns": ["**/*"],
    "ios": {
      "supportsTablet": true
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#1C1C1C"
      }
    }
  }
}